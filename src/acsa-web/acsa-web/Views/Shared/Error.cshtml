@model ErrorViewModel
@{
    ViewData["Title"] = "Error";

    var backUrl = Context.Request.Headers["Referer"].ToString();
    var hasReferrer = !string.IsNullOrEmpty(backUrl);
}
<div class="container py-5 text-center">
    <div class="display-4 text-danger mb-3">
        <i class="bi bi-exclamation-triangle-fill"></i>
        Error
    </div>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <h2 class="text-danger mb-4">@Model.Message</h2>
    }
    else
    {
        <h2 class="text-danger mb-4">An unexpected error occurred. Please try again later.</h2>
    }

    @if (Model.ShowRequestId)
    {
        <p class="text-muted mb-4">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <div class="mt-4">
        @if (hasReferrer)
        {
            <a href="@backUrl" class="btn btn-primary">
                <i class="bi bi-arrow-left-circle me-1"></i> Go Back
            </a>
        }
        else
        {
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-house-door me-1"></i> Back to Home
            </a>
        }
    </div>
</div>

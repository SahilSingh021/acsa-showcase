@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="max-w-3xl mx-auto">
    <div class="card bg-base-100 border border-base-300 shadow-lg">
        <div class="card-body p-8">
            <div class="flex items-start justify-between gap-4">
                <div>
                    <h1 class="text-2xl font-bold">Profile</h1>
                    <p class="text-sm opacity-70 mt-1">Manage your account details.</p>
                </div>
            </div>

            <div class="divider my-2"></div>

            <partial name="_StatusMessage" for="StatusMessage" />

            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="ModelOnly" class="alert alert-error" role="alert"></div>
            }

            <form id="profile-form" method="post" class="space-y-4 mt-4">
                <div class="form-control">
                    <label class="label">
                        <span class="label-text font-medium">Username</span>
                    </label>
                    <input asp-for="Username"
                           class="input input-bordered w-full h-12"
                           placeholder="Username"
                           disabled />
                    <label class="label">
                        <span class="label-text-alt opacity-70">Your username can’t be changed here.</span>
                    </label>
                </div>

                <div class="form-control">
                    <label class="label">
                        <span class="label-text font-medium">Phone number</span>
                    </label>
                    <input asp-for="Input.PhoneNumber"
                           class="input input-bordered w-full h-12"
                           placeholder="Enter your phone number" />
                    <label class="label">
                        <span asp-validation-for="Input.PhoneNumber" class="label-text-alt text-error"></span>
                    </label>
                </div>

                <div class="pt-2">
                    <button id="update-profile-button" type="submit" class="btn btn-primary w-full h-12">
                        Save
                    </button>
                </div>

                <div class="mt-2 text-sm opacity-70">
                    <div class="flex items-center gap-2">
                        <span class="w-2 h-2 rounded-full bg-success"></span>
                        <span>Tip: keep your phone number up to date for account recovery.</span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

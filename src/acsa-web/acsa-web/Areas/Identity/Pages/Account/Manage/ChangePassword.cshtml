@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="max-w-3xl mx-auto">
    <div class="card bg-base-100 border border-base-300 shadow-lg">
        <div class="card-body p-8">
            <div class="flex items-start justify-between gap-4">
                <div>
                    <h1 class="text-2xl font-bold">Change password</h1>
                    <p class="text-sm opacity-70 mt-1">Update your password to keep your account secure.</p>
                </div>
            </div>

            <div class="divider my-6"></div>

            <partial name="_StatusMessage" for="StatusMessage" />

            <form id="change-password-form" method="post" class="space-y-4">
                <div asp-validation-summary="ModelOnly" class="alert alert-error" role="alert"></div>

                <div class="form-control">
                    <label class="label">
                        <span class="label-text font-medium">Old password</span>
                    </label>
                    <input asp-for="Input.OldPassword"
                           type="password"
                           class="input input-bordered w-full h-12"
                           autocomplete="current-password"
                           aria-required="true"
                           placeholder="Enter your current password" />
                    <label class="label">
                        <span asp-validation-for="Input.OldPassword" class="label-text-alt text-error"></span>
                    </label>
                </div>

                <div class="form-control">
                    <label class="label">
                        <span class="label-text font-medium">New password</span>
                    </label>
                    <input asp-for="Input.NewPassword"
                           type="password"
                           class="input input-bordered w-full h-12"
                           autocomplete="new-password"
                           aria-required="true"
                           placeholder="Enter a new password" />
                    <label class="label">
                        <span asp-validation-for="Input.NewPassword" class="label-text-alt text-error"></span>
                    </label>
                </div>

                <div class="form-control">
                    <label class="label">
                        <span class="label-text font-medium">Confirm new password</span>
                    </label>
                    <input asp-for="Input.ConfirmPassword"
                           type="password"
                           class="input input-bordered w-full h-12"
                           autocomplete="new-password"
                           aria-required="true"
                           placeholder="Re-enter the new password" />
                    <label class="label">
                        <span asp-validation-for="Input.ConfirmPassword" class="label-text-alt text-error"></span>
                    </label>
                </div>

                <div class="pt-2">
                    <button type="submit" class="btn btn-primary w-full h-12">
                        Update password
                    </button>
                </div>

                <div class="mt-2 text-sm opacity-70">
                    <div class="flex items-center gap-2">
                        <span class="w-2 h-2 rounded-full bg-success"></span>
                        <span>Tip: use a long passphrase for best security. Do not share this.</span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

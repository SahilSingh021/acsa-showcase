@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="max-w-3xl mx-auto">
    <div class="card bg-base-100 border border-base-300 shadow-lg">
        <div class="card-body p-8">
            <div class="flex items-start justify-between gap-4">
                <div>
                    <h1 class="text-2xl font-bold">Manage Email</h1>
                    <p class="text-sm opacity-70 mt-1">Update your email address and verification status.</p>
                </div>

                <div class="badge badge-outline px-4 py-2">
                    <span class="flex items-center gap-2">
                        <span class="w-2 h-2 rounded-full @(Model.IsEmailConfirmed ? "bg-success" : "bg-warning")"></span>
                        <span class="text-sm">@((Model.IsEmailConfirmed) ? "Verified" : "Not verified")</span>
                    </span>
                </div>
            </div>

            <div class="divider my-6"></div>

            <partial name="_StatusMessage" for="StatusMessage" />

            <form id="email-form" method="post" class="space-y-4">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div asp-validation-summary="All" class="alert alert-error" role="alert"></div>
                }

                <div class="form-control">
                    <label class="label">
                        <span class="label-text font-medium">Current email</span>
                    </label>

                    <div class="join w-full">
                        <input asp-for="Email"
                               class="input input-bordered join-item w-full h-12"
                               placeholder="Your email"
                               disabled />

                        @if (Model.IsEmailConfirmed)
                        {
                            <span class="btn join-item h-12 pointer-events-none">
                                <span class="text-success font-bold">✓</span>
                            </span>
                        }
                        else
                        {
                            <button id="email-verification"
                                    type="submit"
                                    asp-page-handler="SendVerificationEmail"
                                    class="btn btn-outline join-item h-12">
                                Send verification
                            </button>
                        }
                    </div>

                    <label class="label">
                        <span class="label-text-alt opacity-70">
                            @if (Model.IsEmailConfirmed)
                            {
                                <span>Email is verified.</span>
                            }
                            else
                            {
                                <span>Email is not verified yet.</span>
                            }
                        </span>
                    </label>
                </div>

                <div class="form-control">
                    <label class="label">
                        <span class="label-text font-medium">New email</span>
                    </label>

                    <input asp-for="Input.NewEmail"
                           class="input input-bordered w-full h-12"
                           autocomplete="email"
                           aria-required="true"
                           placeholder="Enter new email" />

                    <label class="label">
                        <span asp-validation-for="Input.NewEmail" class="label-text-alt text-error"></span>
                    </label>
                </div>

                <div class="pt-2">
                    <button id="change-email-button"
                            type="submit"
                            asp-page-handler="ChangeEmail"
                            class="btn btn-primary w-full h-12">
                        Change email
                    </button>
                </div>

                <div class="mt-2 text-sm opacity-70">
                    <div class="flex items-center gap-2">
                        <span class="w-2 h-2 rounded-full bg-success"></span>
                        <span>Tip: use an email you can access quickly for verification.</span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

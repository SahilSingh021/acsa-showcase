@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="max-w-5xl mx-auto">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h1 class="text-2xl font-bold">Log in</h1>
            <p class="text-sm opacity-70 mt-1">Use your account details to continue.</p>
        </div>

        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-ghost">
            Create account
        </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
        <section class="lg:col-span-7">
            <div class="card bg-base-100 border border-base-300 shadow-lg">
                <div class="card-body p-6">
                    <h2 class="text-lg font-bold">Sign in</h2>
                    <p class="text-sm opacity-70 mt-1">Enter your email and password.</p>

                    <div class="divider my-4"></div>

                    <form id="account" method="post" class="space-y-4">
                        <div asp-validation-summary="ModelOnly" class="alert alert-error" role="alert"></div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-medium">Email</span>
                            </label>
                            <input asp-for="Input.Email"
                                   class="input input-bordered w-full"
                                   autocomplete="username"
                                   aria-required="true"
                                   placeholder="name@example.com" />
                            <label class="label">
                                <span asp-validation-for="Input.Email" class="label-text-alt text-error"></span>
                            </label>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-medium">Password</span>
                            </label>
                            <input asp-for="Input.Password"
                                   class="input input-bordered w-full"
                                   type="password"
                                   autocomplete="current-password"
                                   aria-required="true"
                                   placeholder="••••••••" />
                            <label class="label">
                                <span asp-validation-for="Input.Password" class="label-text-alt text-error"></span>
                            </label>
                        </div>

                        <div class="flex items-center justify-between gap-3">
                            <label class="label cursor-pointer gap-3 p-0">
                                <input class="checkbox checkbox-sm" asp-for="Input.RememberMe" />
                                <span class="text-sm">@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                            </label>

                            <a id="forgot-password" asp-page="./ForgotPassword" class="link link-hover text-sm">
                                Forgot password?
                            </a>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-primary w-full h-12">
                            Log in
                        </button>

                        <div class="text-sm opacity-80 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 pt-2">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link link-hover">
                                Register as a new user
                            </a>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="link link-hover">
                                Resend email confirmation
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </section>

        <section class="lg:col-span-5">
            <div class="card bg-base-100 border border-base-300 shadow-lg">
                <div class="card-body p-6">
                    <h3 class="text-lg font-bold">Other sign-in options</h3>
                    <p class="text-sm opacity-70 mt-1">Use an external provider if available.</p>

                    <div class="divider my-4"></div>

                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div class="alert">
                                <span class="text-sm">
                                    No external authentication providers are configured.
                                </span>
                            </div>
                        }
                        else
                        {
                            <form id="external-account"
                                  asp-page="./ExternalLogin"
                                  asp-route-returnUrl="@Model.ReturnUrl"
                                  method="post"
                                  class="space-y-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit"
                                            class="btn btn-outline w-full h-12"
                                            name="provider"
                                            value="@provider.Name"
                                            title="Log in using your @provider.DisplayName account">
                                        Continue with @provider.DisplayName
                                    </button>
                                }
                            </form>
                        }
                    }
                </div>
            </div>

            <div class="mt-4 text-sm opacity-70">
                <div class="flex items-center gap-2">
                    <span class="w-2 h-2 rounded-full bg-success"></span>
                    <span>Secured sign-in</span>
                </div>
                <div class="mt-1">Anti-cheat account linking is managed after login.</div>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

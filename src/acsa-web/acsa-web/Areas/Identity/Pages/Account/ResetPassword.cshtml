@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="max-w-3xl mx-auto">
    <div class="card bg-base-100 border border-base-300 shadow-lg">
        <div class="card-body p-8">
            <div class="flex items-start justify-between gap-4">
                <div>
                    <h1 class="text-2xl font-bold">Reset password</h1>
                    <p class="text-sm opacity-70 mt-1">Choose a new password for your account.</p>
                </div>

                <div class="badge badge-outline px-4 py-2 hidden sm:flex">
                    <span class="flex items-center gap-2">
                        <span class="w-2 h-2 rounded-full bg-success"></span>
                        <span class="text-sm">Secured</span>
                    </span>
                </div>
            </div>

            <div class="divider my-6"></div>

            <form method="post" class="space-y-4 max-w-lg">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div asp-validation-summary="ModelOnly" class="alert alert-error" role="alert"></div>
                }

                <input asp-for="Input.Code" type="hidden" />

                <div class="form-control">
                    <label class="label">
                        <span class="label-text font-medium">Email</span>
                    </label>
                    <input asp-for="Input.Email"
                           class="input input-bordered w-full h-12"
                           autocomplete="username"
                           aria-required="true"
                           placeholder="name@example.com" />
                    <label class="label">
                        <span asp-validation-for="Input.Email" class="label-text-alt text-error"></span>
                    </label>
                </div>

                <div class="form-control">
                    <label class="label">
                        <span class="label-text font-medium">New password</span>
                    </label>
                    <input asp-for="Input.Password"
                           type="password"
                           class="input input-bordered w-full h-12"
                           autocomplete="new-password"
                           aria-required="true"
                           placeholder="••••••••" />
                    <label class="label">
                        <span asp-validation-for="Input.Password" class="label-text-alt text-error"></span>
                    </label>
                </div>

                <div class="form-control">
                    <label class="label">
                        <span class="label-text font-medium">Confirm password</span>
                    </label>
                    <input asp-for="Input.ConfirmPassword"
                           type="password"
                           class="input input-bordered w-full h-12"
                           autocomplete="new-password"
                           aria-required="true"
                           placeholder="••••••••" />
                    <label class="label">
                        <span asp-validation-for="Input.ConfirmPassword" class="label-text-alt text-error"></span>
                    </label>
                </div>

                <div class="pt-2 flex flex-col sm:flex-row gap-3">
                    <button type="submit" class="btn btn-primary h-12 sm:min-w-[180px]">
                        Reset
                    </button>

                    <a asp-page="./Login" class="btn btn-ghost h-12">
                        Back to login
                    </a>
                </div>

                <div class="mt-2 text-sm opacity-70">
                    <div class="flex items-center gap-2">
                        <span class="w-2 h-2 rounded-full bg-success"></span>
                        <span>Use a strong password you don’t reuse elsewhere.</span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
